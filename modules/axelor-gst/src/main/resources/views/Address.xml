<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">
  
    <grid model="com.axelor.axelor.gst.db.Address" title="Address" name="address-grid">
        <field name="type" required="true"/>
        <field name="line1" required="true"/>
        <field name="line2"/>
        <field name="pinCode"/>
    </grid>
    
    <form model="com.axelor.axelor.gst.db.Address" title="Address" name="address-form">
       <panel name="address-panel">
	        <field name="type" required="true"/>
	        <field name="line1" required="true"/>
	        <field name="line2"/>
	        <field name="pinCode"/>
	        <field name="city" required="true"/>
	        <field name="state" required="true"/>
	        <field name="country" required="true"/>
       </panel>
    </form>
  
  </object-views>