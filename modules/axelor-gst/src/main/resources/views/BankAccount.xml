  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">
  
  <grid model="com.axelor.axelor.gst.db.BankAccount" title="Bank Details" name="bank-grid">
      <field name="bank" required="true"/>
      <field name="accountNo" required="true"/>
      <field name="ifsc" required="true"/>
      <field name="type"/>
      <field name="address"/>
  
  </grid>
  
  <form model="com.axelor.axelor.gst.db.BankAccount" title="Bank Details" name="bank-form">
    <panel name="bank-panel">
      <field name="bank" required="true"/>
      <field name="accountNo" required="true"/>
      <field name="ifsc" required="true"/>
      <field name="type"/>
      <field name="address"/>
    </panel>
  </form>
